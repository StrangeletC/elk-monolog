{% extends 'base.html.twig' %}

{% block body %}
    <form method="post" name="Create one log" action="/createOneLog">
        <fieldset>
            <legend>Create one log</legend>
            <button type="submit" name="logLevel" value="emergency">🔥 Log emergency</button>
            <button type="submit" name="logLevel" value="info">ℹ️ Log info</button>
            <button type="submit" name="logLevel" value="error">❌ Log error</button>
            <button type="submit" name="logLevel" value="alert">❗ Log alert</button>
            <button type="submit" name="logLevel" value="critical">🌡️ Log critical</button>
            <button type="submit" name="logLevel" value="debug">🐞 Log debug</button>
            <button type="submit" name="logLevel" value="warning">⚠️ Log warning</button>
            <button type="submit" name="logLevel" value="notice">❕ Log notice</button>
            <button type="submit" name="logLevel" value="custom_log_level">👻 Custom log level (exception)</button>
        </fieldset>
    </form>
    <form method="post" name="Create many logs" action="/createManyLogs">
        <fieldset>
            <legend>Create many logs</legend>
            <label>Count:<input type="number" name="batchSize" min="1"></label>
            <label>Log type:
                <select name="logLevel">
                    <option value="emergency">🔥 Log emergency</option>
                    <option value="info">ℹ️ Log info</option>
                    <option value="error">❌ Log error</option>
                    <option value="alert">❗ Log alert</option>
                    <option value="critical">🌡️ Log critical</option>
                    <option value="debug">🐞 Log debug</option>
                    <option value="warning">⚠️ Log warning</option>
                    <option value="notice">❕ Log notice</option>
                    <option value="custom_log_level">👻 Custom log level (exception)</option>
                </select>
            </label>
            <button type="submit">Create!</button>
        </fieldset>
    </form>
    <form method="post" name="Create many random logs" action="/createManyRandomLogs">
        <fieldset>
            <legend>Create many random logs</legend>
            <label>Count:<input type="number" name="batchSize" min="1"></label>
            <button type="submit">Create!</button>
        </fieldset>
    </form>
{% endblock %}